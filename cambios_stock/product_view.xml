<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="product_hide_produce_delay_form_view">
			<field name="name">product.product.form</field>
			<field name="model">product.product</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_normal_procurement_locations_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='delay']" position="replace" />
			</field>
		</record>

		<record model="ir.ui.view" id="product_hide_sale_page_form_view">
			<field name="name">product.product.form</field>
			<field name="model">product.product</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='sale']/.." position="attributes">
					<attribute name="groups">base.group_sale_salesman</attribute>
				</xpath>
			</field>
		</record>
	</data>
</openerp>